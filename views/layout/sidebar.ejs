<div class="sidebar">
<div class="box auth">
  <% if(!user.id && !user.login){ %>
  <form action="/api/auth/login"  method="post" class="login">
  <h2>Вход</h2>
    <div class="form-group">
      <label for="login-login">Логин</label>
      <input type="text" id="login" name="login" />
    </div>
    <div class="form-group">
      <label for="password">Пароль</label>
      <input type="password" id="password" name="password" />
    </div>

    <div class="buttons">
    <button class="switch-button">Регистрация</button>
    <button class="login-button">Войти</button>
    </div>
  </form>


  <form action="/api/auth/register" method="post" class="register">
  <h2>Регистрация</h2>
    <div class="form-group">
      <label for="register-login">Логин</label>
      <input type="text" id="register-login" name="login" />
    </div>
    <div class="form-group">
      <label for="password">Пароль</label>
      <input type="password" id="register-password" name="password" />
    </div>
    <div class="form-group">
      <label for="confirm">Пароль сново</label>
      <input type="password" id="register-password-confirm" name="passwordConfirm" />
    </div>

    <div class="buttons">
    <button class="switch-button">Авторизация</button>
    <button class="register-button">Регистрация</button>
    </div>
  </form>

  <% }else{ %>
  <p><%= user.login%></p>
  <% } %>
</div>
  <div class="box">box</div>
</div>
